<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="18dp"
       android:orientation="vertical" >

       <Button
           android:id="@+id/startSampling"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Start movisensXS Sampling"
           android:onClick="onNavButtonClick" />

       <Button
           android:id="@+id/stopSampling"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Stop movisensXS Sampling"
            android:onClick="onNavButtonClick" />

       <Button
           android:id="@+id/sendBroadcast"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:text="Send broadcast to movisensXS"
            android:onClick="onNavButtonClick" />
   </LinearLayout>

</RelativeLayout>
